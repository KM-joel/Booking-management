<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="whatsapp_send_msg_view_form" model="ir.ui.view">
        <field name="name">whatsapp.send.msg.view.form</field>
        <field name="model">whatsapp.send.message</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field
            name="user_id"
            options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"
          />
                    <field name="mobile" />
                </group>
                <group>
                    <field name="content_send" />
                </group>
                <footer>
                    <button name="send_message" string="Send" type="object" />
                    <button name="cancel" string="Cancel" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
